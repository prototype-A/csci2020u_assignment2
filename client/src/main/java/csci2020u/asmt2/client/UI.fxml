<?xml version="1.0" encoding="UTF-8"?>

<?import fxmltableview.*?>
<?import java.net.URL?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="csci2020u.asmt2.client.Controller">

	<!-- Top: Upload/Download buttons -->
	<top>
		<HBox>

			<Button fx:id="downloadButton" text="Download" onAction="#downloadFile"/>

			<Button fx:id="uploadButton" text="Upload" onAction="#uploadFile"/>

		</HBox>
	</top>

	
	<!-- Middle: client/host file lists -->
	<center>
		<SplitPane dividerPositions="0.5">
			<items>

				<TableView fx:id="clientFileListTable">
					<columns>
						<TableColumn fx:id="clientFileNameCol" text="File Name" prefWidth="400">
						</TableColumn>
					</columns>
				</TableView>

				<TableView fx:id="serverFileListTable">
					<columns>
						<TableColumn fx:id="serverFileNameCol" text="File Name" prefWidth="400">
						</TableColumn>
					</columns>
				</TableView>

			</items>
		</SplitPane>
	</center>

</BorderPane>
